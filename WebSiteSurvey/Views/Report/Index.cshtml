@model WebSiteSurvey.Models.ReportModel
@{
    ViewBag.Title = "Report";
}
<div class="jumbotron">
    <h2>Report</h2>
</div>
<div class="row">
    <div class="col-md-2">

    </div>
    <div class="col-md-8">

        <table class="table table-bordered">
            <tr>
                <td class="text-left">Average Age</td>
                <td class="text-right">@Model.GetAverageAge()</td>
            </tr>
            <tr>
                <td class="text-left">Average Rating</td>
                <td class="text-right">@Model.GetAverageRate()</td>
            </tr>
            <tr>
                <td class="text-left">Total Submissions</td>
                <td class="text-right">@Model.GetTotalSubmissions()</td>
            </tr>
        </table>

        <div class="panel panel-default">
            <div class="panel-body">
                <table name="GenderDistribution" class="table table-striped .table-bordered">
                    <thead>
                    <tr>
                        <td>Gender</td>
                        <td>Distribution</td>
                    </tr>
                    </thead>
                    <tbody>
                    @foreach (var group in @Model.GetGenderDistribution())
                    {
                        <tr>
                            <td>@group.Key </td>
                            <td>@group.Value</td>
                        </tr>
                    }
                    </tbody>
                </table>
            </div>
        </div>

        <div class="panel panel-default">
            <div class="panel-body">
                <table name="CountryDistribution" class="table table-striped .table-bordered">
                    <thead>
                    <tr>
                        <td>Country</td>
                        <td>Distribution</td>
                    </tr>
                    </thead>
                    <tbody>
                    @foreach (var group in @Model.GetCountryDistribution())
                    {
                        <tr>
                            <td>@group.Key </td>
                            <td>@group.Value</td>
                        </tr>
                    }
                    </tbody>
                </table>
            </div>
        </div>

    </div>
    <div class="col-md-2">

    </div>
</div>
